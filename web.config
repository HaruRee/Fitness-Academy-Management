<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Increase the maximum allowed content length for file uploads -->
    <security>
      <requestFiltering>
        <!-- Set max content length to 500MB (524288000 bytes) to match your video upload limit -->
        <requestLimits maxAllowedContentLength="524288000" />
      </requestFiltering>
    </security>
    
    <!-- URL Rewrite rules for pretty URLs (if needed) -->
    <rewrite>
      <rules>
        <rule name="Imported Rule 1" stopProcessing="true">
          <match url="^(.*)$" ignoreCase="false" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="false" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.php/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.php" />
        <add value="index.html" />
      </files>
    </defaultDocument>
    
    <!-- MIME types for video files -->
    <staticContent>
      <mimeMap fileExtension=".mp4" mimeType="video/mp4" />
      <mimeMap fileExtension=".avi" mimeType="video/x-msvideo" />
      <mimeMap fileExtension=".mov" mimeType="video/quicktime" />
    </staticContent>
  </system.webServer>
</configuration>
